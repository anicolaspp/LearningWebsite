@model LearningWebsite.Controllers.CoursesResultViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Courses!</title>

</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title" style="text-align: center">
                        Courses
                    </h3>
                </div>
                <div class="panel-body">
                    <div style="align-content: center">
                        <table class="table table-hover" style="width: 70%;">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>
                                    <a id="modal-AddCourse"
                                       href="#AddCoursePopup1" role="button" class="btn"
                                       data-toggle="modal" aria-hidden="true">
                                        <i class="glyphicon glyphicon-plus"></i>
                                    </a>

                                    <div class="modal fade" id="AddCoursePopup1"
                                         role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h4 class="modal-title" id="courseNameLabel">
                                                        Add Course Details
                                                    </h4>
                                                </div>
                                                <div class="modal-body">

                                                    @using (Html.BeginForm("Add", "Course", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
                                                    {
                                                        <div class="form-group">

                                                            <label for="inputName" class="col-sm-2 control-label">
                                                                Name
                                                            </label>
                                                            <div class="col-sm-6">
                                                                <input type="text" class="form-control" id="inputName" required name="Name">
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <div class="col-sm-offset-4 col-sm-4">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">
                                                                    Cancel
                                                                </button>
                                                                <button type="submit" class="btn btn-default">
                                                                    Save
                                                                </button>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                                
                                            </div>

                                        </div>

                                    </div>

                                    @*<div class="modal fade" id="AddCoursePopup1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="myModalLabel">
                                                            Add Course
                                                        </h4>
                                                    </div>
                                                </div>
                                                <div class="modal-body">
                                                    @using (Html.BeginForm("Add", "Course", FormMethod.Post, new {@class = "form-horizontal", @role = "form"}))
                                                    {
                                                        <div class="form-group">
                                                            <label for="inputName" class="col-sm-2 control-label">
                                                                Name
                                                            </label>
                                                            <div class="col-sm-6">
                                                                <input type="text" class="form-control" id="inputName" name="Name">
                                                            </div>
                                                        </div>

                                                        <div class="form-group">

                                                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                                                Cancel
                                                            </button>
                                                            <button type="submit" class="btn btn-default" data-dismiss="modal">
                                                                Save1
                                                            </button>
                                                        </div>

                                                    }
                                                </div>

                                            </div>
                                        </div>

                                    </div>*@
                                </th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>

                            @foreach (var course in @Model.Courses)
                            {

                                <tr onclick="location.href='@(Url.Action("Index", "CourseDetails", new {id = course.Id}))'" style="cursor: pointer">
                                    <td>@course.Name</td>
                                    <td>
                                        @{
                                            string x = "#ConfirmationRemoveCourse" + course.Id;
                                            string xx = "ConfirmationRemoveCourse" + course.Id;

                                        }

                                        <a
                                            href="@x" role="button" class="btn"
                                            data-toggle="modal"><i class="glyphicon glyphicon-trash"></i></a>

                                        <div class="modal fade" id="@xx"
                                             role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="myModalLabel2">
                                                            Remove
                                                            Confirmation!
                                                        </h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to remove
                                                        it?
                                                    </div>
                                                    <div class="modal-footer">

                                                        <button type="button" class="btn btn-default"
                                                                data-dismiss="modal">
                                                            No
                                                        </button>
                                                        <button type="button" class="btn btn-default"
                                                                data-dismiss="modal" onclick="location.href = '@(Url.Action("Remove", "Course", new {id = course.Id}))'">
                                                            Yes
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>



                                    </td>
                                    <td>
                                        <a id="addFavorites"
                                           href="@Url.Action("AddToFavorites", "Course", new {id = course.Id})" role="button" class="btn"
                                           data-toggle="modal">
                                        
                                            <i class="glyphicon glyphicon-star-empty"></i>
                                        </a>

                                    </td>

                                </tr>
                            }



                            </tbody>
                        </table>
                    </div>
                </div>

            </div>





        </div>

    </div>
