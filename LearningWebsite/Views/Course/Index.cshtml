@model LearningWebsite.Controllers.CoursesResultViewModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Courses!</title>

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12" >

                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="text-align: center">
                           Courses
                        </h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover" style="width: 70%;align-content: center">
                            <thead>
                                <tr>
                                    <th>Name</th>

                                    <th>
                                        <a id="modal-AddCourseMaterial"
                                           href="#AddCourseMaterialPopup" role="button" class="btn "
                                           data-toggle="modal" aria-hidden="true">
                                            <i class="glyphicon glyphicon-plus"></i>
                                        </a>



                                        <div class="modal fade" id="AddCourseMaterialPopup"
                                             role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="myModalLabel">
                                                            Add Course
                                                            Material
                                                        </h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form class="form-horizontal" role="form">
                                                            <div class="form-group">

                                                                <label for="inputName" class="col-sm-2 control-label">
                                                                    Name
                                                                </label>
                                                                <div class="col-sm-6">
                                                                    <input type="text" class="form-control" id="inputName"
                                                                           value="Course Material1">
                                                                </div>
                                                            </div>

                                                            <div class="form-group">

                                                                <label for="inputTag" class="col-sm-2 control-label">
                                                                    Tag
                                                                </label>
                                                                <div class="col-sm-6">
                                                                    <input id="inputTag" type="text" class="form-control" />
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="modal-footer">

                                                        <button type="button" class="btn btn-default"
                                                                data-dismiss="modal">
                                                            Cancel
                                                        </button>
                                                        <button type="button" class="btn btn-default"
                                                                data-dismiss="modal">
                                                            Save
                                                        </button>
                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Course 1</td>
                                    <td>
                                        <a id="modal-ConfRemCourse"
                                           href="#ConfirmationRemoveCourse" role="button" class="btn"
                                           data-toggle="modal"><i class="glyphicon glyphicon-trash"></i></a>

                                        <div class="modal fade" id="ConfirmationRemoveCourse"
                                             role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="myModalLabel">
                                                            Remove
                                                            Confirmation!
                                                        </h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to remove
                                                        it?
                                                    </div>
                                                    <div class="modal-footer">

                                                        <button type="button" class="btn btn-default"
                                                                data-dismiss="modal">
                                                            No
                                                        </button>
                                                        <button type="button" class="btn btn-default"
                                                                data-dismiss="modal">
                                                            Yes
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>



                                    </td>

                                </tr>

                            </tbody>
                        </table>
                    </div>
                 
                </div>


                


            </div>

        </div>
        <div class="modal fade" id="AddPostPopup" role="dialog"
             aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Add Post</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" role="form">
                            <div class="form-group">

                                <label for="inputName" class="col-sm-2 control-label">
                                    Content
                                </label>
                                <div class="col-sm-6">
                                    <textarea rows="5" cols="70"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">

                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Save</button>
                    </div>
                </div>

            </div>

        </div>
    </div>
</body>
</html>
